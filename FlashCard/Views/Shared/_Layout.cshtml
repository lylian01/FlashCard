@using System.Security.Claims
@inject FlashcardDbContext _context
@{
    var nameUser = User.FindFirstValue(ClaimTypes.Name);
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlashCard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
    <link rel="stylesheet" href="~/FlashCard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="m-0 p-0">
        <div class="row m-0">
            <!-- Sidebar - 2 columns -->
            <div class="col-12 col-md-2 sidebar" id="sidebar">
                <div class="sidebar-header pl-5">
                    <button class="btn-menu-toggle" id="toggleSidebar">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                </div>
                <!-- Main Navigation -->
                <nav class="nav-section">
                    <ul class="list-unstyled m-0">
                        <li>
                            <a asp-controller="Home" asp-action="Index" class="nav-link-cus">
                                <i class="bi bi-house-door-fill"></i>
                                 <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Decks" asp-action="UserIndex" class="nav-link-cus">
                                <i class="bi bi-collection-fill"></i>
                                <span>Decks</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Flashcards" asp-action="UserIndex" class="nav-link-cus">
                                <i class="bi bi-bookmark-fill"></i>
                                <span>Flashcards</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <div class="divider mx-2"></div>

                <!-- Your Folders -->
                <div class="nav-section">
                    <h3 class="nav-section-title">My Flash Card</h3>
                    @await Html.PartialAsync("_DeckListPartial") 
                </div>
                <div class="divider mx-2"></div>
                <div class="nav-section">
                    <h3 class="nav-section-title">Quick create</h3>
                    <a asp-controller="Flashcards" asp-action="Create" class="nav-link-cus">
                        <i class="bi bi-plus-circle"></i>
                        <span>Flashcards</span>
                    </a>
                    <a asp-controller="Decks" asp-action="Create" class="nav-link-cus">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Deck</span>
                    </a>
                </div>
            </div>
            <!-- Main Content - 10 columns -->
            <div class="col-12 col-md-10 content-wrapper m-0 p-0" id="mainContent">
                <header>
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                        <div class="container-fluid">
                            <div class="col-2">
                                <h4 style="color: var(--accent) " class="navbar-brand mb-0 h1 fw-bold">FlashCard</h4>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </div>
                            <div class="col-6">
                                <div class="flex-grow-1 mx-auto d-none d-md-block" style="max-width: 500px;">
                                    <div class="input-group">
                                        <input id="textSearch" type="text" class="form-control ps-2" placeholder="Tìm kiếm flashcards...">
                                        <span class="input-group-text bg-white " onclick="search()">
                                           <i class="bi bi-search text-secondary-custom"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="navbar-collapse collapse justify-content-end col-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="user-avatar rounded-circle d-flex align-items-center justify-content-center text-white fw-bold"
                                             style="width: 45px;height: 45px;background-color: var(--secondary);">
                                        @nameUser.ToUpper().Substring(0, 2)
                                        </div>
                                    <span class="fw-semibold text-accent-dark">@nameUser</span>
                                    </div>
                                    <form asp-controller="Users" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link ms-2 border text-decoration-none " 
                                            style="color:var(--accent-dark);">
                                        LogOut
                                        <i class="bi bi-box-arrow-right"></i>
                                    </button>
                                    </form>
                            </div>
                        </div>
                    </nav>
                </header>
                <main role="main" class="p-3" >
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2025 - FlashCard - LYLIAN
        </div>
    </footer>
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Toggle active state on nav links
        document.querySelectorAll('.nav-link-cus').forEach(link => {
            if (link.href === window.location.href) {
                link.classList.add('active');
            }
        });
        // Toggle sidebar collapse
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');

        toggleBtn.addEventListener('click', function() {
            sidebar.classList.toggle('collapsed');
                    
            // Thay đổi số column của content khi sidebar thu gọn
            if (sidebar.classList.contains('collapsed')) {
                // Sidebar thu gọn → Content chiếm nhiều space hơn
                mainContent.classList.remove('col-md-10');
                mainContent.classList.add('col-md-11');
            } else {
                // Sidebar mở rộng → Content về 10 cols
                mainContent.classList.remove('col-md-11');
                mainContent.classList.add('col-md-10');
            }
        });

        // Tooltip cho sidebar khi collapsed (optional)
        document.querySelectorAll('.nav-link-cus').forEach(item => {
            item.addEventListener('mouseenter', function() {
                if (sidebar.classList.contains('collapsed')) {
                    const text = this.querySelector('span')?.textContent;
                    if (text) {
                        this.setAttribute('title', text);
                    }
                }
            });
        });
        // onchange input search 
       function search() {
            var textsearch = document.getElementById("textSearch").value;
             window.location.href = `/Flashcards/Search?key=` + encodeURIComponent(textsearch);
       }
    </script>
</body>
</html>

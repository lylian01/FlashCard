@model IEnumerable<FlashCard.Models.Flashcard>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .text-accent-dark {
        color: var(--accent-dark);
    }

    .text-secondary-custom {
        color: var(--secondary-dark);
    }

    .badge-public {
        background-color: var(--secondary);
    }
    .flashcard-item {
        border-left: 4px solid var(--secondary) !important;
    }

        .flashcard-item:hover {
            transform: translateX(5px);
        }
</style>
<div class="row ">
@foreach (var item in Model)
{
        <div class="col-4 col-md-3 mb-3">
            <a asp-controller="Flashcards" asp-action="Details" asp-route-id="@item.CardId" class="text-decoration-none">
                <div class="card flashcard-item h-100 shadow-sm border-0">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-semibold text-accent-dark mb-2">
                            <i class="bi bi-card-list me-2"></i>@item.CardTitle
                        </h5>
                        <p class="card-text text-secondary-custom small mb-3">@item.CardDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-secondary-custom">
                                <i class="bi bi-person me-1"></i>@((@item.User.UserId == Int32.Parse(ViewBag.UserId)) ? "You" : @item.User.Username)
                            </small>
                            <span class="badge badge-public text-white rounded-pill px-3 py-1 fw-semibold">
                                @((item.IsPublic == true) ? "🌍 Public" : "🔒 UnPublic")
                                </span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
}
</div>
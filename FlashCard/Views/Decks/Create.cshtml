@model FlashCard.Models.Deck

@{
    ViewData["Title"] = "Create";
}
<div class="card shadow-sm border-0 p-4">
    <h3 class="mb-3" style="color:var(--accent-dark)">Create Deck</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 p-0">
                    <label asp-for="DeckName" class="control-label mb-1"></label>
                    <input asp-for="DeckName" class="form-control" />
                    <span asp-validation-for="DeckName" class="text-danger"></span>
                </div>
            <div class="form-group mb-3 p-0">
                <label asp-for="Description" class="control-label mb-1"></label>
                <textarea asp-for="Description" class="form-control"rows="5" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class=" mt-2 d-flex justify-content-end">
                <input type="submit" value="Create" class="btn btn-primary rounded-pill px-5 py-3" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

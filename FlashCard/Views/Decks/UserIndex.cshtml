@model IEnumerable<FlashCard.Models.Deck>

@{
    ViewData["Title"] = "UserIndex";
}

<h1>UserIndex</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    @foreach (var item in Model)
    {
        <div class="d-flex flex-row">
            <div style="width: 80%">
                <div class=" card border border-1 m-2">
                    <a asp-action="Edit" asp-route-id="@item.DeckId" class="d-flex flex-row">
                        <div>@Html.DisplayFor(modelItem => item.DeckName)</div>

                        <div style="color:red">@item.Flashcards.Count()</div>
                    </a>
                </div>
            </div>
            <div style="width:20%">
                <form asp-action="Delete" asp-route-id="@item.DeckId" method="post">
                    <input asp-for="@item.DeckId" type="submit" value="Delete" class="btn btn-danger" />
                </form>

            </div>
        </div>
    }
</div>

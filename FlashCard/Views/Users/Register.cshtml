@model FlashCard.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Root.css">
    <link rel="stylesheet" href="~/css/Register.css">
</head>

<body>
    <div class="login-container">
        <h2 class="title">Đăng ký</h2>
        <form asp-action="Register">
            @{
                var firstError = ViewData.ModelState.Values
                .SelectMany(v => v.Errors)
                .FirstOrDefault();
                if (firstError != null)
                {
                    <div class="error-box">
                        <strong>Error:</strong> @firstError.ErrorMessage
                    </div>
                }
            }
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Đăng ký" class="btn" />
            </div>
            <p class="more">
                Đã có tài khoản? <a href="./Login">Đăng nhập</a>
            </p>
        </form>
    </div>

    <script>
        const email = document.getElementById("Email");

        email.addEventListener("input", () => {
            email.setCustomValidity(""); // xóa lỗi cũ

            if (email.validity.typeMismatch) {
                email.setCustomValidity("Email không hợp lệ. Vui lòng nhập đúng định dạng.");
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
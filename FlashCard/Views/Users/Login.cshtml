@model FlashCard.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;

}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Root.css">
    <link rel="stylesheet" href="~/css/Login.css">
</head>

<body>
    <div class="login-box">
        <h2>Đăng nhập</h2>
        <form asp-action="Login">
            @{
                var firstError = ViewData.ModelState.Values
                .SelectMany(v => v.Errors)
                .FirstOrDefault();

                if (firstError != null)
                {
                    <div class="error-box">
                        <strong>Error:</strong> @firstError.ErrorMessage
                    </div>
                }
            }
            <div class="input-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" placeholder="Nhập email của bạn" />
            </div>
            <div class="input-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Nhập mật khẩu" />
            </div>
            <button type="submit" value="Login" class="btn-login">Login</button>
        </form>
        <div class="more">
            Chưa có tài khoản ? <a href="./Register">Đăng ký</a>
        </div>
    </div>

    <script>
        const email = document.getElementById("Email");
        const password = document.getElementById("Password");

        email.addEventListener("input", () => {
            email.setCustomValidity(""); // xóa lỗi cũ

            if (email.validity.typeMismatch) {
                email.setCustomValidity("Email không hợp lệ. Vui lòng nhập đúng định dạng.");
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>